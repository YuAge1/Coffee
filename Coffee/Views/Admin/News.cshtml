@{
    ViewData["Title"] = "News";
}

<div>
    <h1 class="display-4">News</h1>

    <a href="/admin/news/createNews" role="button" class="btn btn-primary">Create news</a>

    <br />
    <hr />
    <br />

    <table cellpadding="10">
        <tr>
            <th>Title</th>
            <th>Text</th>
            <th>Publication date</th>
            <th>AuthorId</th>
            <th>CreateDate</th>
            <th>Is active</th>
            <th></th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Text</td>
                <td>@item.Date.ToString("yyyy.MM.dd HH:mm")</td>
                <td>@item.AuthorId</td>
                <td>@item.CreateDate.ToString("yyyy.MM.dd HH:mm")</td>
                <td>@item.IsActive</td>
                <td><a href="">edit</a></td>
                <td><a href="">delete</a></td>
            </tr>
        }
    </table>
</div>
